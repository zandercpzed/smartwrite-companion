{
  "name": "smartwrite-companion",
  "displayName": "SmartWrite Companion",
  "description": "Writing analytics and AI assistance for VSCode",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:smartwrite-companion"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "smartwrite-companion",
          "name": "SmartWrite Companion",
          "icon": "resources/icon.svg",
          "contextualTitle": "SmartWrite"
        }
      ]
    },
    "commands": [
      {
        "command": "smartwrite.refreshStats",
        "title": "Refresh Statistics",
        "category": "SmartWrite"
      },
      {
        "command": "smartwrite.analyzeText",
        "title": "Analyze Current Document",
        "category": "SmartWrite"
      },
      {
        "command": "smartwrite.toggleModule",
        "title": "Toggle Module Visibility",
        "category": "SmartWrite"
      }
    ],
    "configuration": {
      "title": "SmartWrite Companion",
      "properties": {
        "smartwrite.dailyGoal": {
          "type": "number",
          "default": 2000,
          "description": "Daily word count goal"
        },
        "smartwrite.modules.sessionStats": {
          "type": "boolean",
          "default": true,
          "description": "Show Session Stats module"
        },
        "smartwrite.modules.textMetrics": {
          "type": "boolean",
          "default": true,
          "description": "Show Text Metrics module"
        },
        "smartwrite.modules.readability": {
          "type": "boolean",
          "default": true,
          "description": "Show Readability module"
        },
        "smartwrite.modules.suggestions": {
          "type": "boolean",
          "default": true,
          "description": "Show Suggestions module"
        },
        "smartwrite.modules.personaAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "Show Persona Analysis module"
        },
        "smartwrite.readability.formula": {
          "type": "string",
          "enum": [
            "flesch-reading",
            "flesch-kincaid",
            "gunning-fog"
          ],
          "default": "flesch-reading",
          "description": "Default readability formula"
        },
        "smartwrite.ollama.url": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama API URL for persona analysis"
        },
        "smartwrite.ollama.model": {
          "type": "string",
          "default": "llama2",
          "description": "Ollama model to use for analysis"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "package": "vsce package",
    "lint": "eslint src --ext ts,tsx"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.50.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.294.0"
  }
}
